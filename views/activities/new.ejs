<% include ../partials/header %>


<div class="container">
	<div class = "row">
	<h1 style = "text-align: center;">Create the activity</h1>	
		<div style = "width : 30%; margin: 40px auto;">
		<form class="createForm" action="/activities" method="POST">
			<div class="form-group">
				Type Name: <input type="text" name="activity[type]">
			</div>
			<div class="form-group">
				Location: <input type="String" name="activity[location]">
			</div>
			<div class="form-group">
				Duration: <input type="String" name="activity[duration]">
			</div>
			<div class="form-group">
				Contact Information: <input type="text" name="activity[contactInformation]">
			</div>
			<div class="form-group">
				Cost($): <input type="number" min="1" name="activity[cost]">
			</div>
			<div class="form-group">
				image: <input type="text" name="activity[image]">
			</div>
			<div class="form-group">
				description: <textarea id="description" name="activity[description]"></textarea>
			</div>
		<button type="submit" class="btn btn-primary" >Create it!</button>
		<a href="/tours">back</a>
		</form>
		</div>
	</div>
</div>


<% include ../partials/footer %>